
ROOTCFLAGS    = $(shell root-config --cflags)
ROOTLIBS      = $(shell root-config --libs)
ROOTGLIBS     = $(shell root-config --glibs)

# Linux with egcs
CXX           = g++
CXXFLAGS      = -O -Wall -fPIC -Wno-deprecated
LD            = g++
LDFLAGS       = -g
SOFLAGS       = -shared


CXXFLAGS     += $(ROOTCFLAGS)
LIBS          = $(ROOTLIBS)
GLIBS         = $(ROOTGLIBS)

#-----------------------------------------------------------------------------------------------

OBJS = MCBatch.o TElement.o
PROGRAMS =  MCBatch

MCBatch:	$(OBJS)
		$(LD) $(LDFLAGS) $(OBJS) $(GLIBS) -o MCBatch
		@echo "$@ done"

clean:
	@rm -f $(OBJS) *Dict.* core* lib*.so

.SUFFIXES: .cxx

.cxx.o:
	$(CXX) $(CXXFLAGS) -c $<
